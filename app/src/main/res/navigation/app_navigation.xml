<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aslifitness.fitracker.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/vendorListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userPlanFragment"
            app:destination="@id/userPlanFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userPlanFragment2"
            app:destination="@id/userPlanFragment" />
        <action
            android:id="@+id/action_homeFragment_to_vendorListFragment"
            app:destination="@id/vendorListFragment" />
    </fragment>

    <fragment
        android:id="@+id/userPlanFragment"
        android:name="com.aslifitness.fitracker.routine.UserRoutineFragment"
        android:label="UserPlanFragment" >
        <action
            android:id="@+id/action_userPlanFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_userPlanFragment_to_historyFragment"
            app:destination="@id/vendorListFragment" />
        <action
            android:id="@+id/action_userPlanFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_userPlanFragment_to_vendorListFragment"
            app:destination="@id/vendorListFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.aslifitness.fitracker.profile.UserProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_historyFragment"
            app:destination="@id/vendorListFragment" />
        <action
            android:id="@+id/action_profileFragment_to_vendorListFragment"
            app:destination="@id/vendorListFragment" />
    </fragment>

    <fragment
        android:id="@+id/vendorListFragment"
        android:name="com.aslifitness.fitracker.vendors.VendorListFragment"
        android:label="VendorListFragment" >
        <action
            android:id="@+id/action_vendorListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_vendorListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_vendorListFragment_to_userPlanFragment"
            app:destination="@id/userPlanFragment" />
    </fragment>

</navigation>