<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".stories.ViewStoryFragment">

    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:id="@+id/progress_view"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aslifitness.fitrackers.stories.FullScreenVideoView
        android:id="@+id/video_view"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view" />

    <com.aslifitness.fitrackers.stories.FullScreenImageView
        android:id="@+id/image_view"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_view" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/reverse"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp" />

        <View
            android:id="@+id/skip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_like"
            android:layout_height="26dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="20dp"
            android:layout_width="26dp"
            app:srcCompat="@drawable/ic_thumb_up_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_share"
            android:layout_height="26dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="20dp"
            android:layout_width="26dp"
            app:srcCompat="@drawable/ic_share_24" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:textAppearance="@style/TextBody.Medium.White"
        app:layout_constraintBottom_toTopOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lorem ipsum dolor sit amet" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_image"
        android:layout_height="32dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"
        android:layout_width="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextBody.Medium.White"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        tools:text="Shubham Pandey" />

</androidx.constraintlayout.widget.ConstraintLayout>