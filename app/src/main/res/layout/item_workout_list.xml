<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_workout"
        android:layout_width="@dimen/dimen_56dp"
        android:layout_height="@dimen/dimen_56dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:textAppearance="@style/TextLarge.Medium.Primary"
        app:layout_constraintStart_toEndOf="@+id/icon_workout"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bench press.." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sub_header"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:textAppearance="@style/TextBody.Regular.Secondary"
        app:layout_constraintStart_toEndOf="@+id/icon_workout"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:text="Chest." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_selected"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_disable" />

</androidx.constraintlayout.widget.ConstraintLayout>