<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_workout"
        android:layout_width="@dimen/dimen_52dp"
        android:layout_height="@dimen/dimen_52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add_24"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        tools:text="Bench press.."
        android:layout_marginStart="@dimen/dimen_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_workout"
        android:textAppearance="@style/TextBody.Medium.Primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sub_header"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        tools:text="Chest."
        android:layout_marginStart="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toEndOf="@+id/icon_workout"
        android:textAppearance="@style/BodySmall.Regular.Secondary" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/side_arrow"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        app:srcCompat="@drawable/ic_right_arrow_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>