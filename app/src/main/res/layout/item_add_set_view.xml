<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/dimen_12dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAppearance="@style/ExtraLarge.Medium.PrimaryInfo"
        tools:text="1" />

    <View
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_gravity="center"
        android:background="@color/text_dark_tertiary" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/weight_in_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:includeFontPadding="false"
        android:textAppearance="@style/ExtraLarge.Medium.PrimaryInfo"
        tools:text="20" />

    <View
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_gravity="center"
        android:background="@color/text_dark_tertiary" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/reps_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:includeFontPadding="false"
        android:textAppearance="@style/ExtraLarge.Medium.PrimaryInfo"
        tools:text="10" />

    <View
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_gravity="center"
        android:background="@color/text_dark_tertiary" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/done"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_weight="1"
        android:gravity="center"
        app:srcCompat="@drawable/ic_check_disable" />

</LinearLayout>